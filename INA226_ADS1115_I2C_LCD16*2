#include <Wire.h>
#include <Adafruit_ADS1015.h>
#include <Adafruit_INA226.h>
#include <LiquidCrystal_I2C.h>

Adafruit_ADS1115 ads;
Adafruit_INA226 ina226;

int ledPin = 9;
float ledCurrent;

LiquidCrystal_I2C lcd(0x27, 16, 2);

void setup()
{
  pinMode(ledPin, OUTPUT);
  Serial.begin(9600);
  lcd.init();
  lcd.backlight();
  
  ads.begin();
  ads.setGain(GAIN_TWOTHIRDS);
  
  ina226.begin();
  ina226.setCalibration_32V_2A();
}

void loop()
{
  int16_t adc0;
  adc0 = ads.readADC_SingleEnded(0);

  float voltage = adc0 * 0.0001875;
  
  ledCurrent = ina226.readShuntVoltage() / ina226.getShuntValue();
  
  digitalWrite(ledPin, HIGH);
  delay(1000);
  
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print("Led Current: ");
  lcd.print(ledCurrent);
  lcd.print("A");
}
